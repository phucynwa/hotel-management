<% provide :title, t(".create_bill") %>
<% provide :button_text, t(".create") %>
<div class="container">
  <div class="col-md-6 col-md-offset-3 contact-form">
    <h3><%= raw t(".create_bill_title") %></h3>
    <%= form_for [:admin, @bill] do |f| %>
      <%= f.label :code %>
      <%= f.text_field :code, class: "form-control" %>
      <%= f.label :booking_id %>
      <%= f.text_field :booking_id, class: "form-control" %>
      <%= f.submit :save, class: "submit-btn" %>
    <% end %>
  </div>
</div>
