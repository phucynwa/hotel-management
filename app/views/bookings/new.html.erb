<% provide :title, t(".title") %>
<div class="container">
  <div class="col-md-6 contact-left-block">
    <h3><%= raw t(".recommend") %></h3>
  </div>
  <div class="col-md-6 contact-form">
    <h3><%= raw t(".create_booking_title") %></h3>
    <%= form_for @booking do |f| %>
      <%= f.label :rooms %>
      <select name="rooms[]" multiple>
        <%= all_room.each_with_index do |room, i| %>
          <option value="<%= room.id %>"><%= room.label %></option>
        <% end %>
      </select>
      <%= f.label :start_time %>
      <%= f.datetime_select :start_time, minute_step: 15 %>
      <%= f.label :end_time %>
      <%= f.datetime_select :end_time, minute_step: 15 %>
      <%= f.button :submit, class: "submit-btn" %>
    <% end %>
  </div>
</div>
