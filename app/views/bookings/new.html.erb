<% provide :title, t(".title") %>
<div class="container">
  <div class="col-md-6 contact-left-block">
    <h3><%= raw t(".recommend") %></h3>
  </div>
  <div class="col-md-6 contact-form">
    <h3><%= raw t(".create_booking_title") %></h3>
    <%= form_for @booking do |f| %>
      <%= f.label :rooms %><br>
      <div class="row">
        <% all_room_available.each do |room| %>
          <div class="col-md-3">
            <input type="checkbox" name="rooms[]" value="<%= room.id %>"
            <%= " checked" if room.id == params[:id].to_i %>>
            <%= room.label %>
          </div>
        <% end %>
      </div>
      <br>
      <%= f.label :start_time %><br>
      <%= f.datetime_select :start_time, ampm: true, minute_step: Settings.min_times %>
      <br>
      <%= f.label :end_time %><br>
      <%= f.datetime_select :end_time, ampm: true, minute_step: Settings.min_times %>
      <br>
      <%= f.button :submit, class: "submit-btn" %>
    <% end %>
  </div>
</div>
